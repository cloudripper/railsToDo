<div class="container">
  <div class="row">
    <div class="col-12">
      <h1 class="text-center my-4">To Do List</h1>
        <div class="d-flex flex-column align-items-center" id="tasks"></div>
        <div class="d-flex flex-column align-items-center">
            <form class="d-flex col-6 mb-3 py-2 text-left border rounded" id="form"> 
                <input class="bg-light w-100 border-0 text-dark bg-light" id="addTask" type="text" placeholder="New task" />
                <button class='btn rounded bg-dark text-light ml-auto' type="submit">Add Task</button> 
            </form>
        </div>
        <div class="d-flex flex-row col-6 text-center mx-auto mb-4">
          <label class="ml-auto mr-3 align-self-center">Display Tasks: </label>
          <button class='btn rounded bg-secondary text-light mr-2' id="activeTasks" type="button">Active</button> 
          <button class='btn rounded bg-secondary text-light mx-2' id="completedTasks" type="submit">Completed</button> 
          <button class='btn rounded bg-secondary text-light ml-2' id="allTasks" type="submit">All</button> 
        </div>
    </div>
  </div>
</div>